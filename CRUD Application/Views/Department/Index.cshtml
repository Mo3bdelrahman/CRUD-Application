@model List<Department>
@{
    ViewData["Title"] = "Departments Index";
}

<h1>Departments Index</h1>

<div>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (Department dept in Model)
                {
                    <tr>
                        <td>@dept.Id</td>
                        <td>@dept.Name</td>
                        <th>
                            <a asp-action="Details" asp-controller="Department" asp-route-Id="@dept.Id" class="btn btn-primary">Details</a>
                            <a asp-action="Edit" asp-controller="Department" asp-route-Id="@dept.Id" class="btn btn-success">Edit</a>
                            <a asp-action="Delete" asp-controller="Department" asp-route-Id="@dept.Id" class="btn btn-danger">Delete</a>
                            <a asp-action="Show" asp-controller="Department" asp-route-Id="@dept.Id" class="btn btn-info">Show Courses</a>
                            <a asp-action="Manage" asp-controller="Department" asp-route-Id="@dept.Id" class="btn btn-secondary">Manage Courses</a>
                        </th>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No Departments yet</td>
                </tr>

            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Create" asp-controller="Department" class="btn btn-outline-primary ">Create</a>
</div>