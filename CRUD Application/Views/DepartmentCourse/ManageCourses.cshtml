@model DepartmentCoursesNotInDeptViewModel
@{
    ViewData["Title"] = "ManageCourses";
    SelectList coursesInDept = new SelectList(Model.Department.Courses, "Id", "Name");
    SelectList coursesNotInDept = new SelectList(Model.coursesNotInDept, "Id", "Name");
}

<h1>Manage @Model.Department.Name Courses</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Courses Not Included: </label>
                <select name="coursesToAdd" class="form-control" asp-items="coursesNotInDept" multiple></select>
            </div>
            <div class="form-group">
                <label  class="control-label">Courses Included: </label>
                <select name="coursesToRemove" class="form-control" asp-items="coursesInDept" multiple></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" asp-controller="Department" class="btn btn-warning">Back to List</a>
</div>